{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "packages/orchestration/src/**/*",
    "packages/llm/src/**/*",
    "tools/build/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/pkg",
    "**/target",
    "**/*.d.ts",
    "apps/**/*",
    "packages/cli/**/*",
    "packages/plugins/**/*",
    "tests/**/*"
  ]
}